#경고창

from tkinter import*
window=Tk()
label=Label(window,text="Hello World")
label.pack()
window.mainloop()

#버튼

from tkinter import*
window=Tk()
b1=Button(window,text="Hello World")
b1.pack() #pack이 위치,배치시키는 역할
window.mainloop()

#버튼동작

from tkinter import*

def callback():
    b1["text"]="버튼이 클릭됨"
window=Tk()
b1=Button(window,text="클릭",command=callback)
b1.pack(side=LEFT) #pack이 위치,배치시키는 역할
window.mainloop()

#버튼 배치
from tkinter import*

window=Tk()
b1=Button(window,text="첫번째 버튼")
b2=Button(window,text="두번째 버튼")
b1.pack(side=LEFT) #b1.pack()
b2.pack(side=LEFT) #b2.pack() 일 경우 수직으로 배치
window.mainloop()

#버튼사이 여백, 텍스트 수정
from tkinter import*

window=Tk()
b1=Button(window,text="첫번째 버튼")
b2=Button(window,text="두번째 버튼")
b1.pack(side=LEFT,padx=10)
b2.pack(side=LEFT, padx=10)
b1["text"]="one"
b2["text"]="two"

window.mainloop()
